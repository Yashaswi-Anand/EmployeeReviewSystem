<div class="container">
    <% for(let user of users) { %>
            <div class="row p-1 list-design w-100 bg-info">
                <div class="col-2">
                    <a><h3><%= user.userName %></h3> </a>
                </div>
                <div class="col-4">
                    <a><h3><%= user.email %></h3> </a>
                </div>
                <div class="col-3">
                    <a><h3><%= user.performanceReview %></h3> </a>
                </div>
                <div>
                    <textarea name="feedback" placeholder="Add your feedback..."></textarea>
                    <button type="submit">Send</button> 
                </div>
            </div>
    <% } %>
</div>