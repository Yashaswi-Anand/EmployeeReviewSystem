
<div class="container">
    <% for(let user=0; user < users.length; user++) { %>
            <div class="row p-1 list-design w-100 bg-info">
                <div class="col-2">
                    <h3><%= users[user].userName %></h3>
                </div>
                <div class="col-4">
                    <h3><%= users[user].email %></h3>
                </div>
                <div class="col-3">
                   <% for(let i of performanceReviewList[user][users[user].email]){ %>
                       <li><h4><%= i %></h4></li>
                   <% } %>
                </div>
                <div>
                    <textarea name="feedback" placeholder="Add your feedback..."></textarea>
                    <button type="submit">Send</button> 
                </div>
            </div>

            <div>
                <%= user.performancelist %>
            </div>
    <% } %>
</div>