<link rel="stylesheet" href="/CSS/style.css">

<header> 
    <div class="m-0 row p-3 d-flex justify-content-between bg-success rounded border border-light">
        <div class="col-4">
            <h3 class="text-light"><i class="fa-solid fa-clipboard-list"></i><i><b> Employee Review System</b></i></h3>
        </div>
        <div class="col-3">
            <h3 class="text-light"><i>hey <%= userName %>!</i></h3>
        </div>
        <div class="col-1">
            <a href="/user/addEmployee"><button  class="btn btn-light"><i class="fa-solid fa-user-plus"></i> Add Employee</button></a>
        </div>
        <div class="col-2">
            <a href="/user/logout"><button  class="btn btn-light"> Logout</button></a>
        </div>
    </div>
</header>

<div class="row m-0 wrapper">
    <div class="col-2">
        <a><button class="btn btn-light">Admin</button></a> <br>
        <a><button class="btn btn-success">Employee</button></a>
    </div>
    <div class="col-10">
        <div class="row mt-2">
            <div class="col-2 ms-3">
                <h3 class="text-warning">Name</h3>
            </div>
            <div class="col-4">
                <h3 class="text-warning">Email</h3>
            </div>
            <div class="col-3">
                <h3 class="text-warning">Performance <br> Rating</h3>
            </div>
            <div class="col-1">
                <h3 class="text-warning">Edit</h3>
            </div>
            <div class="col-1">
                <h3 class="text-warning">Delete</h3>
            </div>
        </div>
        <hr>
        <% for(let user of users) { %>
                <div class="row">
                    <div class="col-2 ms-3">
                        <h3 class="text-light"><%= user.userName %></h3>
                    </div>
                    <div class="col-4">
                        <h3 class="text-light"><%= user.email %></h3>
                    </div>
                    <div class="col-3">
                        <h3 class="text-light"> &nbsp;&ensp;  <%= user.performanceReview %></h3>
                    </div>
                    <div class="col-1">
                        <a href="/user/editEmployee/<%= user._id %>"><i class="fa-solid fa-pen-to-square ms-3 text-light" style="font-size: 1.5rem;"></i></a> 
                    </div>
                    <div class="col-1">
                        <a href="/user/deleteEmployee/<%= user._id %>"><i class="fa-solid fa-trash-can ms-4 text-light" style="font-size: 1.5rem;"></i></a>
                    </div>
                </div>
        <% } %>
    </div>
</div>